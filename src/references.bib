@article{bianchiniWildlandFireGrowth2010,
  title = {Wildland Fire Growth Prediction Method Based on {{Multiple Overlapping Solution}}},
  author = {Bianchini, Germ{\'a}n and Denham, M{\'o}nica and Cort{\'e}s, Ana and Margalef, Tom{\`a}s and Luque, Emilio},
